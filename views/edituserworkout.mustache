{{#workout}}
<h1 class="d-flex flex-row justify-content-center pt-4">Editing your {{exercise}}</h1>
{{/workout}}
<div class="container" id="workoutContainer">

<!-- Default form group -->
 <form action="/editUserWorkout" method="post">
    <!-- Type of exercise input -->
    <div class="form-group">
        {{#workout}}<!-- <label for="formGroupExampleInput">Type of exercise:</label> -->
        <input type="hidden" class="form-control" name="exercise" value="{{exercise}}">
        {{/workout}}
    </div>
    <!-- Time input -->
    <div class="form-group">
        <label for="formGroupExampleInput2">Amount of time (minutes):</label>
        <input type="text" class="form-control" name="time" placeholder="Enter time doing exercise in minutes...">
    </div>
    <!-- Weight input -->
    <div class="form-group">
        <label for="formGroupExampleInput2">Amount of weight (pounds):</label>
        <input type="text" class="form-control" name="weight" placeholder="Enter weight in pounds...">
    </div>
    <!-- Reps input -->
    <div class="form-group">
        <label for="formGroupExampleInput2">Amount of reps:</label>
        <input type="text" class="form-control" name="reps" placeholder="Enter number of reps...">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Miles ran/swam/biked:</label>
        <input type="text" class="form-control" name="miles" placeholder="Enter miles ran/swam/biked...">
    </div>
      <div class="form-group">
      <input type='hidden' name='userId' value='{{id}}'>
      <input type='submit' value="Confirm Edit">
      </div>
</form>

<!-- Workout Upload -->
</div>

<div class="card-body" id="workoutdiv">
        <table class="table table-striped">
            <tbody class="container text-center">
            {{#workout}}
            <tr>
                <td>Exercise:</td>
                <td>{{exercise}}</td>
            </tr>
            <tr>
                <td>Time:</td>
                <td>{{time}} minutes</td>
            </tr>
            <tr>
                <td>Weight:</td>
                <td>{{weight}} lbs</td>
            </tr>
            <tr>
                <td>Reps:</td>
                <td>{{reps}}</td>
            </tr>
             <tr>
                <td>Miles:</td>
                <td>{{miles}}</td>
            </tr>


            {{/workout}}
            </tbody>
        </table>
