{{! Begin CARD }}
<div class="card card-body">
    <h4 class="card-title">User Information</h4>

{{! Begin Form }}
<form action='/userUpdateForm' method='post'>
<div class="form">
  <div class="row">
    <div class="col">First name:
      <input type="text" class="form-control" placeholder="Enter your first name" name="firstName">
    </div>
    <div class="col">Last Name:
      <input type="text" class="form-control" placeholder="Enter your last name" name="lastName">
    </div>
  </div>
</div>
  <br>
    <div class="form-group">
      <label>Age:</label>
      <input type="text" class="form-control" name="age" placeholder="Enter your age... ex. 21">
    </div>

    <div class="form-group">
      <label>Gender: Male, Female, or Other</label>
      <input class="form-control" type="text" name="gender" placeholder="Enter your gender." >
    </div>
    <br>

    <div class="form-group">
      <label for="weight">Weight</label>
      <input type="text" class="form-control" name="weight">lbs
    </div>

    <div class="form-group">
      <label>Height:</label>
      <input type="text" class="form-control" name="height" placeholder="Enter your height in inches...ex. 72">
    </div>


    <div class="form-group">
      <label>City:</label>
      <input class="form-control" type="text" name="city" placeholder="Enter your city.... ex. Houston">
    </div>
    <br>

    <div class="form-group">
      <label>State:</label>
      <input class="form-control" type="text" name="state" placeholder="Enter your state.... ex. Texas">
    </div>
    <br>

    <div class=form-group>
      <label>Describe your activity level on a scale 0-10 (0 = none, 10 = nonstop):</label>
    <br>
      <textarea class="form-control" rows="5" id="comment" name="activityLevel" placeholder="0 - 10"></textarea>
    </div>
    <br>
    <div class="form-group">
      <label>Describe your Goals:</label>
        <textarea class="form-control" rows="5" id="comment" name="goals" placeholder="Ex. Lose weight, maintain weight, get cut etc"></textarea>
    </div>
<br>
<br>
      <div>
        <input type="hidden" name="userId" value='{{userid}}'>
        <input type="submit" value="Update">
      </div>


</form>


